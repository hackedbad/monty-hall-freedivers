<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="DoorButton" parent="AppTheme">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">@dimen/portrait_door_height</item>
    <item name="android:scaleType">fitCenter</item>
    <item name="android:adjustViewBounds">true</item>
    <item name="android:layout_margin">@dimen/door_margin</item>
    <item name="android:padding">@dimen/door_padding</item>
  </style>

  <style name="OkayButton" parent="AppTheme">
    <item name="android:layout_width">@dimen/okay_width</item>
    <item name="android:layout_height">@dimen/okay_height</item>
    <item name="android:scaleType">fitCenter</item>
    <item name="android:adjustViewBounds">true</item>
  </style>

  <style name="NewGameButton" parent="AppTheme">
    <item name="android:layout_width">@dimen/new_game_width</item>
    <item name="android:layout_height">@dimen/new_game_height</item>
    <item name="android:scaleType">fitCenter</item>
    <item name="android:adjustViewBounds">true</item>
  </style>

  <style name="GoatButton" parent="AppTheme">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">@dimen/portrait_goat_door_height</item>
    <item name="android:scaleType">fitCenter</item>
    <item name="android:adjustViewBounds">true</item>
    <item name="android:layout_margin">@dimen/goat_margin</item>
    <item name="android:padding">@dimen/goat_padding</item>
  </style>
</resources>
